<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/back4"
    android:layout_height="match_parent">
<ImageButton
    android:id="@+id/back"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@drawable/back_for_button_in_history1"
    android:src="@drawable/ic_back_arrow"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Humidifier">
        </TextView>

            <Button
                android:id="@+id/main"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/back_for_button_in_humidity"
                android:text="0%" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/auto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/back_for_button_in_humidity1"
                android:text="ToggleButton"
                android:textOff="off"
                android:textOn="on" />
            <ToggleButton
                android:id="@+id/on_off"
                android:layout_marginLeft="270dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/back_for_button_in_humidity2"
                android:layout_gravity="center"
                />
            </LinearLayout>


    </LinearLayout>
</FrameLayout>

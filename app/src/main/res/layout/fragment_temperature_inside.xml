<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    android:background="@drawable/back7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back_arrow"
        android:background="@drawable/back_for_button_in_history1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Temperature  inside"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">





        <Button
            android:id="@+id/main"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:text="0 C*" />

        <ToggleButton

            android:id="@+id/auto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/s1"
            android:text="ToggleButton"
            android:textOff="off"
            android:textOn="on" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/heater_on_off"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/back_for_button_in_temperature"
                android:textOn="Выключить"
                android:textOff="Включить"/>

            <ToggleButton
                android:id="@+id/window_on_off"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/back_for_button_in_temperature"
                android:textOn="Выключить"
                android:textOff="Включить"/>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>